import os
import subprocess
import time
import logging
import sys

# --- Professional Logging ---
logging.basicConfig(
    level=logging.INFO,
    format='%(asctime)s [%(levelname)s] %(message)s',
    handlers=[
        logging.FileHandler("/var/log/hydra-init.log"),
        logging.StreamHandler(sys.stdout)
    ]
)

class HydraZeroTouchOrchestrator:
    def __init__(self):
        self.s3_bucket = "${s3_bucket_name}"
        self.region = "${aws_region}"
        self.version = "1.5.42"
        self.bin_path = "/usr/local/bin/sliver-server"
        self.container_name = "hydra-c2"
        self.image_name = "local/sliver:latest"

    def run(self, cmd, check=True):
        try:
            logging.info(f"Executing: {cmd}")
            result = subprocess.run(cmd, shell=True, check=check, capture_output=True, text=True)
            return result.stdout
        except subprocess.CalledProcessError as e:
            logging.error(f"Command failed: {e.cmd}\nStdout: {e.stdout}\nStderr: {e.stderr}")
            if check: raise e
            return None

    def phase_1_prepare(self):
        logging.info("--- Phase 1: Decoy & Dependencies ---")
        self.run("export DEBIAN_FRONTEND=noninteractive && apt-get update")
        self.run("apt-get install -y nginx curl wget jq unzip net-tools")
        # Start Nginx to pass initial ALB health checks
        self.run("systemctl start nginx && systemctl enable nginx")

    def phase_2_docker(self):
        logging.info("--- Phase 2: Docker Engine ---")
        if not os.path.exists("/usr/bin/docker"):
            self.run("curl -fsSL https://get.docker.com | sh")
            self.run("systemctl enable docker && systemctl start docker")

    def phase_3_supply_chain(self):
        logging.info("--- Phase 3: Binary Fetch & S3 Restore ---")
        # Download Binary
        url = f"https://github.com/BishopFox/sliver/releases/download/v{self.version}/sliver-server_linux"
        self.run(f"wget -q '{url}' -O {self.bin_path}")
        self.run(f"chmod +x {self.bin_path}")

        # S3 Restore (Phoenix Protocol)
        self.run("mkdir -p /root/.sliver")
        restore_cmd = f"aws s3 cp s3://{self.s3_bucket}/backups/latest_sliver_state.tar.gz /tmp/sliver_backup.tar.gz --region {self.region}"
        if self.run(restore_cmd, check=False):
            logging.info("[*] Backup found. Restoring database...")
            self.run("tar -xzvf /tmp/sliver_backup.tar.gz -C /root/", check=False)
        
        # Ownership Fix
        self.run("chown -R root:root /root/.sliver")

    def phase_4_build_image(self):
        logging.info("--- Phase 4: Local Image Build ---")
        dockerfile = f"""
FROM ubuntu:24.04
RUN apt-get update && apt-get install -y ca-certificates libcap2-bin && rm -rf /var/lib/apt/lists/*
COPY sliver-server /usr/local/bin/sliver-server
RUN chmod +x /usr/local/bin/sliver-server
ENV HOME=/root
WORKDIR /root
# We use 'daemon' mode as the entrypoint
ENTRYPOINT ["/usr/local/bin/sliver-server", "daemon"]
"""
        with open("/tmp/Dockerfile", "w") as f:
            f.write(dockerfile)
        
        self.run(f"cp {self.bin_path} /tmp/sliver-server")
        self.run(f"docker build -t {self.image_name} /tmp")

    def phase_5_launch_and_inject(self):
        logging.info("--- Phase 5: Zero-Touch Handoff ---")
        
        # 1. Kill Nginx (Release Port 80)
        self.run("systemctl stop nginx")
        self.run("systemctl disable nginx")

        # 2. Launch Container (Using your PROVEN manual config)
        # -p 80:80 : Explicit bridge mapping (Works with ALB)
        # --privileged : Allows low-port binding without capability issues
        self.run(f"docker rm -f {self.container_name}", check=False)
        
        launch_cmd = (
            f"docker run -d "
            f"--name {self.container_name} "
            f"--restart always "
            f"-p 80:80 "
            f"--privileged "
            f"-v /root/.sliver:/root/.sliver "
            f"{self.image_name}"
        )
        self.run(launch_cmd)

        # 3. Listener Injection Loop (The "Enforcer")
        logging.info("Waiting for Daemon to initialize...")
        time.sleep(15) # Give the database time to load inside container

        # Try to inject the listener up to 5 times
        for i in range(1, 6):
            logging.info(f"Injection Attempt {i}/5...")
            
            # Use 'docker exec' to pipe the command into the running binary
            # This is the equivalent of you typing it manually
            inject_cmd = f"docker exec -i {self.container_name} /usr/local/bin/sliver-server <<EOF\nhttp -l 80\nexit\nEOF"
            self.run(inject_cmd, check=False)
            
            # Verification: Check Host Port 80
            time.sleep(5)
            netstat = self.run("netstat -tulpn")
            if ":80" in netstat and "docker-proxy" in netstat:
                logging.info("SUCCESS: Port 80 is open via Docker Proxy.")
                logging.info("PROJECT HYDRA IS LIVE (ZERO TOUCH).")
                return True
            
            logging.warning("Listener not yet active. Retrying...")
            time.sleep(5)

        logging.error("CRITICAL: Listener injection failed after 5 attempts.")
        return False

if __name__ == "__main__":
    # Wait for cloud-init network
    time.sleep(5)
    orchestrator = HydraZeroTouchOrchestrator()
    try:
        orchestrator.phase_1_prepare()
        orchestrator.phase_2_docker()
        orchestrator.phase_3_supply_chain()
        orchestrator.phase_4_build_image()
        orchestrator.phase_5_launch_and_inject()
    except Exception as e:
        logging.critical(f"Orchestration Failed: {e}")
        # Failsafe: Start Nginx so we can at least debug via SSM/SSH without termination
        subprocess.run("systemctl start nginx", shell=True)