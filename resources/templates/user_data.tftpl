#!/bin/bash
# Install Python3 environment
apt-get update
apt-get install -y python3 python3-pip

# Inject the rendered Python script from Terraform
cat <<'EOF' > /usr/local/bin/hydra_init.py
${python_init_content}
EOF

# Execute with logging
python3 /usr/local/bin/hydra_init.py > /var/log/hydra-boot.log 2>&1